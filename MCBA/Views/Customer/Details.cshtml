@model CustomerViewModel

<script type="text/Javascript" language="javascript">  
function alert_meth()  
{  
alert("Client Side MessageBox");  
}  
</script>

@{
    ViewData["Title"] = "Customer Profile";
}
<div class="header ui-shadow">
    <div style="display: flex;flex-direction: row; justify-content: space-between">
        <div>
            <h1>Stored Record for @Model.Name</h1>
           
        </div>
        <div style="padding: 0 1rem 1rem;">
            <a asp-controller="Customer" asp-action="Index" class="btn btn-primary customBtn" style="width: 256px" asp-route-id="@Model.CustomerID">Back</a>
        </div>
    </div>
</div>


<hr/>

<div class="row">

    <div class="col-6">

        <h3>Your stored Information:</h3>
        <div class="table-responsive">
            <table class="table align-middle text-start">
                <tbody>
                <tr>
                    <td>Customer ID:</td>
                    <td>@Model.CustomerID</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>Address:</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td>City:</td>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <td>State:</td>
                    <td>@Model.State</td>
                </tr>
                <tr>
                    <td>Postcode:</td>
                    <td>@Model.PostCode</td>
                </tr>
                <tr>
                    <td>TFN:</td>
                    <td>@Model.TFN</td>
                </tr>
                <tr>
                    <td>Mobile:</td>
                    <td>@Model.Mobile</td>
                </tr>
                </tbody>
            </table>
            <form asp-controller="Customer" asp-action="Edit" asp-route-id="@Model.CustomerID" method="get">
                <input type="submit" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CustomerID" value="Edit"/>
            </form>
        </div>
    </div>


    <div class="col-3 left-border">
        <h3>You can change your password here:</h3>
        <form asp-controller="Customer" asp-action="Details" method="post" enctype="application/x-www-form-urlencoded">
            <label asp-for="PasswordHash">Current Password</label>
            <input type="password" asp-for="PasswordHash" class="form-control"/>
            @Html.ValidationMessage("CurrentPasswordError", new { @class = "text-danger" })

            <label asp-for="NewPassword">New Password</label>
            <input type="password" asp-for="NewPassword" class="form-control"/>

            <label asp-for="NewPasswordConfirm">New Password</label>
            <input type="password" asp-for="NewPasswordConfirm" name="newPasswordConfirm" class="form-control"/>
            @Html.ValidationMessage("PasswordMatchError", new { @class = "text-danger" })
            <input type="submit"
                   class="btn btn-primary"
                   value="Change"/>
        </form>
    </div>
</div>